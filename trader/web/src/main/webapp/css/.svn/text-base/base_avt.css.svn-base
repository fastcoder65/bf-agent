* {margin:0; padding:0; font:12px arial;}
html, body {width: 100%; height: 100%;}

input {
    font-size: 11px;
    font-family: Verdana, Arial, sans-serif;
    background-color: #F0F0F0;
    border-top: 1px solid #C0C0C0;
    border-left: 1px solid #C0C0C0;
    border-right: 1px solid #C0C0C0;
    border-bottom: 1px solid #C0C0C0;
}

input.highlight {
    font-size: 11px;
    font-family: Verdana, Arial, sans-serif;
    background-color: #FFFFFF;
    border-top: 1px solid #C0C0C0;
    border-left: 1px solid #C0C0C0;
    border-right: 1px solid #C0C0C0;
    border-bottom: 1px solid #C0C0C0;
    cursor: pointer;
    cursor: hand;
}

.save {
    vertical-align:middle;
    height:15px;
    width:14px;
    margin-right:1px;

    border-top: 0;
    border-left: 0;
    border-right: 0;
    border-bottom: 0;
}

#adm {background:url(../images/login/auth_puzzle.jpg) no-repeat; margin:0 auto; height:300px; width:400px;}
#frm {margin:30px 0 30px 150px; text-align:left;}
.btn-submit {
    font-size: 11px;
    font-family: Verdana, Arial, sans-serif;
    background-color: #F0F0F0;
    border-top: 1px solid #C0C0C0;
    border-left: 1px solid #C0C0C0;
    border-right: 1px solid #C0C0C0;
    border-bottom: 1px solid #C0C0C0;
}
